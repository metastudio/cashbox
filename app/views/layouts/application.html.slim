doctype html
html
  = render 'shared/layout/head'
  body class="#{params[:q] ? 'with-flow' : ''}"
    = render 'shared/layout/header'
    .container-fluid
      = render 'shared/layout/flash_messages'
      .row
        .col-sm-9
          = yield
        .col-sm-3
          = yield :sidebar
    footer
      = yield :footer
      .notification_icon data-url="#{image_url('icon.png')}"
        - if user_signed_in?
          .current_user_id data-id="#{current_user.id}"
